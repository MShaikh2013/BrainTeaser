<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dp"/>
            <stroke android:width="1dp" android:color="#8BC34A"/>
            <gradient android:angle="-90" android:startColor="#577C2B" android:endColor="#8BC34A"/>
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dp"/>
            <stroke android:width="1dp" android:color="#617E42" />
            <solid android:color="#8BC34A"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="10dp"/>
            <stroke android:width="1dp" android:color="#5F8336" />
            <gradient android:angle="-90" android:startColor="#638F2E" android:endColor="#8BC34A"/>
        </shape>
    </item>

</selector>